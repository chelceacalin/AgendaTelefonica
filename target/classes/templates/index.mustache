<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agenda Corespondenta</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        #toast {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #4CAF50;
            color: white;
            padding: 16px;
            border-radius: 8px;
            display: none;
            z-index: 999;
        }

        #toast.show {
            display: block;
        }

        #toast #img {
            float: left;
            margin-right: 10px;
        }

        @media (max-width: 640px) {
            #toast {
                width: 90%;
                left: 5%;
            }
        }
    </style>
</head>

<body class="bg-gray-100 text-gray-900 font-sans antialiased">

<!--Nav start-->
{{>navbar}}
<!--Nav end-->
{{#isNewContact}}
    <div id="toast"><div id="img">Icon</div><div id="desc">You have successfully added {{contact.name}}</div></div>
    <script>
        function launch_toast() {
            let x = document.getElementById("toast");
            x.className = "show";
            setTimeout(function(){ x.className = x.className.replace("show", ""); }, 5000);
        }
        launch_toast();
    </script>
{{/isNewContact}}

<div class="container mx-auto py-8">
    <h1 class="text-3xl font-bold mb-6 m-4">Agenda Corespondenta</h1>

    {{#successMessage}}
        {{>fragments/successMessage}}
    {{/successMessage}}

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
        {{>fragments/addNewContact}}
        {{#contacts}}
            {{>fragments/contactCard}}
        {{/contacts}}
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
<script>

    let successMessageUpdate = document.querySelector(".success");

    if (successMessageUpdate) {
        setTimeout(() => {
            successMessageUpdate.remove();
        }, 2000);
    }
</script>
</body>

</html>
