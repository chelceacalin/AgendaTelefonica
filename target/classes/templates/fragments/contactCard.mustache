<div class="bg-white shadow-md rounded-lg p-4 m-4">
    <h2 class="text-lg font-semibold mb-2">Name: {{name}}</h2>
    <p class="text-gray-600">Nickname: {{nickName}}</p>
    <p class="text-gray-600">Email: {{email}}</p>
    <div class="mt-4 flex flex-wrap justify-center items-center">
        <form method="get" action="/contact/edit/{{email}}" class="inline m-2">
            <input type="hidden" name="email" value="{{email}}" />
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                Edit
            </button>
        </form>
        <form method="post" action="/contact/delete/{{email}}" class="inline m-2">
            <input type="hidden" name="email" value="{{email}}" />
            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">
                Delete
            </button>
        </form>
        <form method="get" action="/contact/sendMail/{{email}}" class="inline m-2">
            <input type="hidden" name="fromEmail" value="{{user.email}}"/>
            <input type="hidden" name="toEmail" value="{{email}}" />
            {{#hasEmailPassword}}
                <button type="submit" class="bg-blue-800 hover:bg-blue-900 text-white font-bold py-2 px-4 rounded">
                    Send Email
                </button>
            {{/hasEmailPassword}}
            {{^hasEmailPassword}}
                <span class="text-red-500 font-bold ml-2">No SMTP password set!</span>
            {{/hasEmailPassword}}
        </form>
    </div>
</div>
