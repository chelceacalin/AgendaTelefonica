<div class="bg-white shadow-md rounded-lg p-4">
    <h2 class="text-lg font-semibold mb-2">Name: {{name}}</h2>
    <p class="text-gray-600">Nickname: {{nickName}}</p>
    <p class="text-gray-600">Email: {{email}}</p>
    <div class="mt-4">
        <form method="get" action="/contact/edit/{{email}}" class="inline">
            <input type="hidden" name="email" value="{{email}}" />
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 me-2 rounded">
                Edit
            </button>
        </form>
        <form method="post" action="/contact/delete/{{email}}" class="inline">
            <input type="hidden" name="email" value="{{email}}" />
            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 me-2 rounded">
                Delete
            </button>
        </form>
        <form method="get" action="/contact/sendMail/{{email}}" class="inline">
            <input type="hidden" name="fromEmail" value="{{user.email}}"/>
            <input type="hidden" name="toEmail" value="{{email}}" />
{{#hasEmailPassword}}
            <button type="submit" class="bg-blue-700 hover:bg-blue-900 text-white font-bold py-2 px-4 rounded">
                Send Email
            </button>
{{/hasEmailPassword}}

            {{^hasEmailPassword}}
                <span class="text-red-500 font-bold">No SMPT password set!</span>
            {{/hasEmailPassword}}

        </form>
    </div>
</div>
