<div class="bg-white shadow-md rounded-lg p-4">
    <h2 class="text-lg font-semibold mb-2">Name: {{name}}</h2>
    <p class="text-gray-600">Nickname: {{nickName}}</p>
    <p class="text-gray-600">Email: {{email}}</p>
    <div class="mt-4">
        <form method="get" action="/contact/edit/{{email}}" class="inline">
            <input type="hidden" name="email" value="{{email}}" />
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 me-4 rounded">
                Edit
            </button>
        </form>
        <form method="post" action="/delete/{{email}}" class="inline">
            <input type="hidden" name="email" value="{{email}}" />
            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">
                Delete
            </button>
        </form>
    </div>
</div>
